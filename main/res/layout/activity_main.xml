<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="mr_auspicious.shivam_kr_shiv.com.myapp2.MainActivity"
    android:weightSum="8">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/i1"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Card Balance($)"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:id="@+id/t1"

            />
        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/e1"
            android:background="#FFF"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/i2"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Early Interest Rate (%)"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:id="@+id/t2"
            android:layout_below="@id/i1"
            />
        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:id="@+id/e2"
            android:background="#FFF"
            android:layout_below="@id/i1"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/i3"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Minimum Payment($)"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:id="@+id/t3"
            android:layout_below="@id/i2"
            />
        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/e3"
            android:background="#FFF"
            android:layout_below="@id/i2"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/i4"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Card Balance ($)"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:id="@+id/t4"
            android:layout_below="@id/i3"
            />
        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/e4"
            android:background="#FFF"
            android:layout_below="@id/i3"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/i5"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Months Remaining"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:id="@+id/t5"
            android:layout_below="@id/i4"
            />
        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:id="@+id/e5"
            android:background="#FFF"
            android:layout_below="@id/i1"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/i6"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest Paid will be(%)"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:id="@+id/t6"
            android:layout_below="@id/i5"
            />
        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:id="@+id/e6"
            android:background="#FFF"
            android:layout_below="@id/i5"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <Button

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Compute"
        android:textColor="#000"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:id="@+id/b1"
        android:layout_below="@id/i6"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Clear"
        android:textColor="#000"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:id="@+id/b2"
        android:layout_below="@id/b1"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
